<!DOCTYPE html>
<html>
<%
# PYTHON optionnal args:
# load = "py|pylibs|d3|bootstrap|vue"

setdefault("__load__","")
setdefault("__async__","")
setdefault("__static__","")

setdefault("load",__load__)
setdefault("_",f"{__static__}/resources/node_modules")
%>
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<!--[if IE]><meta http-equiv="X-UA-Compatible" content="IE=edge"><![endif]-->
% if "bootstrap" in load:
  <!-- set Bootstrap -->
  <link rel="stylesheet" href="{{_}}/bootstrap/dist/css/bootstrap.min.css">
  <script src="{{_}}/jquery/dist/jquery.slim.min.js"></script>
  <script src="{{_}}/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
% end
% if "d3" in load:
  <!-- set D3.js -->
  <script src="{{_}}/d3/dist/d3.min.js"></script>
% end
% if "pylibs" in load:
  <!-- set Python3 including standard libs-->
  <script src="{{_}}/brython/brython.js"></script>
  <script src="{{_}}/brython/brython_stdlib.js"></script>
% elif "py" in load: 
  <!-- set Python3 without standard libs -->
  <script src="{{_}}/brython/brython.js"></script>
% end
% if "vue" in load:
  <!-- set Vue.js -->
  <link rel="stylesheet" href="{{_}}/vue/dist/vue.min.js">
% end
</head>
% if "py" in load: #NOTE: can be "py" or "pylibs"
<body onload="brython()">
% else:
<body>
% end
{{ !base }}
<script>
  // set title from first <h1> heading
  var heading = document.getElementsByTagName("h1")[0];
  if (heading != null) {document.title = heading.innerText;}
</script>

</body>
</html>
