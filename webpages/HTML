    document.addEventListener("unload",function(){wsmongo.close()});
    websocket_send = function(json){wsmongo.send(JSON.stringify(json))};
    websocket_onmessage = function(func) {
      wsmongo.onmessage = function(event){func.apply(this,arguments)};
    }
  </script>
